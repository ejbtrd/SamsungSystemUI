<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/notification_panel_theme_ripple_color"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/sec_notification_guts_app_info_toggle_text_bg" />
            <corners android:radius="@dimen/notification_panel_background_radius" />
        </shape>
    </item>
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="@dimen/notification_panel_background_radius" />
        </shape>
    </item>
</ripple>