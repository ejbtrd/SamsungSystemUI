<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="fill_horizontal|center" android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/tw_progress_color_control_normal" />
            <corners android:radius="@dimen/sec_brightness_slider_corner_radius" />
            <stroke android:width="@dimen/sec_brightness_slider_background_stroke_width" android:color="@color/sec_brightness_slider_background_stroke_color" />
        </shape>
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/sec_brightness_slider_corner_radius" />
                <solid android:color="@color/tw_progress_color_control_activated" />
                <stroke android:width="@dimen/sec_brightness_slider_background_stroke_width" android:color="@color/sec_brightness_slider_background_stroke_color" />
            </shape>
        </clip>
    </item>
</layer-list>